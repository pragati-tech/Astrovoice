<div class="form-group">
    <label for="title">Title</label> <br>
    <input <%= article.title %> type="text" name="title" id="title" class="form-control">
</div>
<br>
<div class="form-group">
    <label for="description">Description</label> <br>
    <textarea type="text" name="description" id="description" <%= article.description %> class="form-control"></textarea>
</div>
<br>
<div class="form-group">
    <label for="markdown">Markdown</label> <br>
    <textarea type="text" name="markdown" id="markdown" <%= article.markdown %> class="form-control"></textarea>
</div>
<button class="btn btn-secondary"><a style="color: white; text-decoration: none;" href="/blogs">Cancel</a></button>
<button type="submit" class="btn btn-primary">Save</button>