    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.74)
}

.box .cont{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.cont:hover{
    background-color: #88888848;
}
.box .cont .circle{
    position: absolute;
    width: 70px;
    height: 70px;
    border-radius: 50%;
    left: 50%;
    top: 40%;
transform: translate(-50%,-50%);
overflow: hidden;

}
.box .cont .circle img{
    position: absolute;
    width: 100%;
  height:100%;
    object-fit: cover;
}
.box .cont h5{
    position: absolute;
    font-size: 20px;
    color: white;
    text-align: center;
    top: 70%;
    left: 50%;
    transform: translate(-50%,-50%);
    font-weight: 200;
}
.box .cont p{
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: white;
